generator client {
  provider = "prisma-client"
  output   = "../src/db/generated/prisma"
}

// For now using a local SQLite database. Will switch to Neon postgres later.
datasource db {
  provider = "sqlite"
}

model User {
  id          String       @id @default(cuid())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  email       String       @unique
  name        String
  password    String
  comments    Comment[]
  suggestions Suggestion[]
  upvotes     Upvote[]
}

model Category {
  id          String       @id @default(cuid())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  name        String       @unique
  slug        String       @unique
  suggestions Suggestion[]
}

model Suggestion {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String    @unique
  description String
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  String
  comments    Comment[]
  upvotes     Upvote[]

  // Has status: Planned, InProgress, Live
}

model Comment {
  id           String     @id @default(cuid())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  content      String
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  suggestion   Suggestion @relation(fields: [suggestionId], references: [id])
  suggestionId String
}

model Upvote {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  user         User?       @relation(fields: [userId], references: [id])
  userId       String?
  suggestion   Suggestion? @relation(fields: [suggestionId], references: [id])
  suggestionId String?
}
