{
  "name": "product-feedback-app-backend",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "db:seed": "bunx --bun prisma db seed",
    "db:studio": "bunx --bun prisma studio",
    "db:generate": "bunx --bun prisma generate",
    "db:push": "bunx --bun prisma db push",
    "db:migrate:dev": "bunx --bun prisma migrate dev",
    "db:migrate:deploy": "bunx --bun prisma migrate deploy",
    "dev": "bun --watch main.ts"
  },
  "dependencies": {
    "@prisma/adapter-libsql": "7.3.0",
    "@prisma/adapter-neon": "7.3.0",
    "@prisma/client": "7.3.0",
    "hono": "4.11.7",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/bun": "1.3.8",
    "eslint": "9.39.2",
    "eslint-plugin-perfectionist": "5.5.0",
    "prisma": "7.3.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0"
  }
}
