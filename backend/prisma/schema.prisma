generator client {
  provider = "prisma-client"
  output   = "../src/db/generated/prisma"
}

// For now using a local SQLite database. Will switch to Neon postgres later.
datasource db {
  provider = "sqlite"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Category {
  id          String       @id @default(cuid())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  name        String       @unique
  slug        String       @unique
  suggestions Suggestion[]
}

model Suggestion {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String   @unique
  description String
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  // Has category, upvotes, comments, and status
}
