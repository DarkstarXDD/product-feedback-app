generator client {
  provider = "prisma-client"
  output   = "../src/db/generated/prisma"
}

// For now using a local SQLite database. Will switch to Neon postgres later.
datasource db {
  provider = "sqlite"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}
